<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alwaysDrawnWithCache="false"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/CardPadding"
        android:elevation="@dimen/CardElevation"
        android:focusableInTouchMode="true"
        android:longClickable="true"
        android:onClick="showItem"
        app:cardCornerRadius="@dimen/generalCornerRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardHeight"
            android:layout_marginStart="@dimen/cardGeneralOutside"
            android:layout_marginTop="5dp"
            android:hint="@string/Description" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardHeight"
            android:layout_marginStart="@dimen/cardGeneralOutside"
            android:layout_marginTop="30dp"
            android:hint="@string/Value" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardHeight"
            android:layout_marginBottom="@dimen/cardGeneralOutside"
            android:layout_marginStart="@dimen/cardGeneralOutside"
            android:layout_marginTop="55dp"
            android:hint="@string/Date" />

        <TextView
            android:id="@+id/Txt1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardHeight"
            android:layout_marginEnd="@dimen/cardGeneralOutside"
            android:layout_marginStart="120dp"
            android:layout_marginTop="@dimen/cardGeneralOutside"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Txt2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardHeight"
            android:layout_marginEnd="@dimen/cardGeneralOutside"
            android:layout_marginStart="120dp"
            android:layout_marginTop="30dp"
            android:text="@string/Text2"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Txt3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardHeight"
            android:layout_marginBottom="@dimen/cardGeneralOutside"
            android:layout_marginEnd="@dimen/cardGeneralOutside"
            android:layout_marginStart="120dp"
            android:layout_marginTop="55dp" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>