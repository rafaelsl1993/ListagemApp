<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/EdtAdiciona"
        android:layout_width="214dp"
        android:layout_height="43dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/Edt_Adiciona"
        android:inputType="textPersonName"
        android:minWidth="300px"
        app:layout_constraintBottom_toTopOf="@+id/BtnAdiciona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnAdiciona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:width="50px"
        android:hint="@string/Btn_Adiciona"
        android:minWidth="450px"
        android:onClick="funcAdiciona"
        android:text="Adiciona"
        app:layout_constraintBottom_toTopOf="@+id/EdtList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EdtAdiciona" />

    <ListView
        android:id="@+id/EdtList"
        android:layout_width="368dp"
        android:layout_height="361dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnAdiciona" />
</android.support.constraint.ConstraintLayout>